			<h3>Your Personal Information</h3>
			
			<form action="/editProfile" id="updateProfile" method="POST">
				<b>Dawg Tag - <%= student.dawgTag %></b>
				<br>
				<br>
				<div class="form-group">
					<label class="labels" for="firstName">First Name: </label><br>
					<span class="editable" type="test" id="firstName"><%= student.firstName %></span>
				</div>
				<div class="form-group">
					<label class="labels" for="lastName">Last Name: </label><br>
					<span class="editable" type="text" id="lastName"><%= student.lastName %></span>
				</div>
				<div class="form-group">
					<label class="labels" for="phone">Phone: </label><br>
					<span class="editable" type="text" id="phone" pattern="\d{3}[\-]\d{3}[\-]\d{4}"><%= student.phone %></span>
				</div>
				<div class="form-group">
					<label class="labels" for="email">Email: </label><br>
					<span class="editable" type="email" id="email" pattern="[a-z0-9._%+-]+@siu.edu$"><%= student.email %></span>
				</div>
				<div class="form-group">
					<label class="labels" for="address">Address: </label><br>
					<span class="editable" type="text" id="address"><%= student.address %></span>
				</div>
				<div class="form-group">
					<label class="labels" for="gradYear">Graduation Year: </label><br>
					<span class="editable" type="number" id="gradYear"><%= student.gradYear %></span>
				</div>
				<div class="form-group">
					<label class="labels" for="city">City: </label><br>
					<span class="editable" type="text" id="city" ><%= student.city %></span>
				</div>
				<div class="form-group">
					<label class="labels" for="state">State: </label><br>
					<span class="editable" type="text" id="state"><%= student.state %></span>
				</div>
				<div class="form-group">
					<label class="labels" for="gpa">GPA: </label><br>
					<span class="editable" type="text" id="gpa"><%= student.gpa %></span>
				</div>
				<div class="form-group">
					<label class="labels" for="state">Industry: </label><br>
					<span class="editable" type="text" id="city"><%= student.industry %></span>
				</div>
				<div class="form-group">
					<label class="labels" for="birthdate">Birthday: </label><br>
					<span class="editable" type="date" id="birthdate" name="birthdate"><%= student.birthdate %></span>
				</div>
				<button type="submit" value="Submit" class="btn btn-outline-primary" id="submitEdits">Submit Changes</button>
			</form>
			<script>
					var switchToInput = function () {
						console.log("goo")
						var $input = $("<input>", {
							val: $(this).text(),
							id: $(this).attr("id"),
							name: $(this).attr("id"),
							type: $(this).attr("type")
						});
						//$input.addClass("editable")
						$("#submitEdits").show();
						$input.addClass("form-control");
						$input.attr('id');
						$(this).replaceWith($input);
					};
					var switchToSpan = function () {
						var $span = $("<span>", {
							text: $(this).val()
						});
						$span.addClass("editable");
						$(this).replaceWith($span);
						$span.on("click", switchToInput);
					}
					console.log("PRO");
					$(".editable").on("click", switchToInput);

					/*$('updateProfile').on('submit', function(e) {
