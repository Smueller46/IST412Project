			   <th class="col-xs-1">Payout</th>
			   <th class="col-xs-1">select</th>
            </tr>
          </thead>
          <tbody>
			<% var a = 1; %>
			<% admin.forEach(function(admin) { %>
			   
		   <tr>
		   <td class="col-xs-1"><%=a %></td>
			   <td class="col-xs-4"><%= admin.title %></td>
			   <td class="col-xs-4"><%= admin.name %></td>
				   <td class="col-xs-4"><%= admin.type %></td>
			   <td class="col-xs-4"><%= admin.location %></td>
			   <td class="col-xs-4"><%= admin.semester %></td>
			   <td class="col-xs-4"><%= admin.paid %></td>
			   <td class="col-xs-1 objectID"  style="display:none;"> <%=admin._id %></td>
				   <td class="col-xs-1"><input type="checkbox" name="select" class="selectApproved" /></td>
					   </tr>
				   <%	a++; %>
		   <%}) %>
            
          </tbody>
    </table>
	
