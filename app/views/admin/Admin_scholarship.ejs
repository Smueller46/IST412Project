 <div class="Approval">
	<div class="row text-center">

        <h2 >Scholarships that need Approval</h2>
   
	</div>
    
    <div class='scroll'>
	
    <table width="100%">
	
             <thead>
            <tr>
              <th class="col-xs-1">#</th>
			  <th class="col-xs-4">Scholarship</th>
			  <th class="col-xs-4">Sponsor</th>
			  <th class="col-xs-4">Requirement</th>
			  <th class="col-xs-4">Duration</th>
			   <th class="col-xs-1">Payout</th>
			   <th class="col-xs-1">select</th>
            </tr>
          </thead>
          <tbody>
			<% var a = 1; %>
			<% result.forEach(function(result) { %>
			   
		   <tr>
		   <td class="col-xs-1"><%=a %></td>
			   <td class="col-xs-4"><%= result.title %></td>
			   <td class="col-xs-4"><%= result.name %></td>
				   <td class="col-xs-4"><%= result.requirements %></td>
			   <td class="col-xs-4"><%= result.duration %></td>
			   <td class="col-xs-4"><%= result.semester %></td>
			   <td class="col-xs-4"><%= result.paid %></td>
			   <td class="col-xs-1 objectID"  style="display:none;"> <%=result._id %></td>
				   <td class="col-xs-1"><input type="checkbox" name="select" class="selectApproved" /></td>
					   </tr>
				   <%	a++; %>
		   <%}) %>
            <tr>
              
          </tbody>
    </table>
	
	</div>
	<div><p><br></p></div>
		<div class="row text-center">
			 <button type="button" class="btn btn-primary btn-lg ">Approved</button><!--BUTTON-->
			<button type="button" class="btn btn-primary btn-lg ">Reject</button><!--BUTTON-->
		</div>
		<div><p><br></p></div>
	</div>
	
	 
 <div class="Approval">
	<div class="row text-center" >

        <h2 >Approved</h2>
   
	</div>
    
    <div class='scroll'>
	
    <table width="100%">
	
             <thead>
            <tr>
              <th class="col-xs-1">#</th>
			  <th class="col-xs-4">Scholarship</th>
			  <th class="col-xs-4">Sponsor</th>
			  <th class="col-xs-4">Requirement</th>
